<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flow_firstHorizontalStyle="packed"
    tools:context=".MainActivity">


  <ImageView
      android:id="@+id/imageView"
      android:layout_width="412dp"
      android:layout_height="242dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/picture_top" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="115dp"
      android:layout_height="110dp"
      android:paddingLeft="10dp"
      app:layout_constraintEnd_toStartOf="@+id/textView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView"
      app:srcCompat="@drawable/picture" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="291dp"
      android:layout_height="71dp"
      style="@style/bid_text"
      android:text="ИТ-решения для развития бизнеса"
      android:paddingRight="10dp"
      app:layout_constraintEnd_toEndOf="@+id/textView2"
      app:layout_constraintTop_toBottomOf="@+id/imageView" />

  <TextView
      android:id="@+id/textView2"
      style="@style/small_text"
      android:layout_width="291dp"
      android:layout_height="37dp"
      android:layout_marginTop="2dp"
      android:paddingRight="10dp"
      android:text="Разработка программного обеспечения"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="407dp"
      android:layout_height="29dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text="О нас:"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      style="@style/bid_text" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="406dp"
      android:layout_height="77dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text="Aston - компания по разработке ПО с полным циклом услуг. Уже 15 лет мы помогаем заказчикам по всему миру трансформировать бизнес, создавая эффективные мобильные и десктопные решения."
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      style="@style/small_text" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="407dp"
      android:layout_height="28dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:text="Офисы"
      style="@style/bid_text"
      android:gravity="center"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />
</androidx.constraintlayout.widget.ConstraintLayout>