<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".MainActivity">


  <ImageView
      android:id="@+id/imageView"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="left"
      android:layout_margin="10dp"
      app:srcCompat="@drawable/flag_of_austria_svg" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="center_horizontal"
      android:layout_margin="10dp"
      app:srcCompat="@drawable/flag_of_colombia_svg" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="right"
      android:layout_margin="10dp"
      app:srcCompat="@drawable/flag_of_denmark_svg" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="left|center"
      android:layout_margin="10dp"
      app:srcCompat="@drawable/flag_of_italy" />

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="center"
      android:layout_margin="10dp"
      app:srcCompat="@drawable/flag_of_madagascar" />

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="right|center"
      android:layout_margin="10dp"
      app:srcCompat="@drawable/flag_of_poland_svg" />

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="bottom"
      android:layout_margin="10dp"
      app:srcCompat="@drawable/flag_of_switzerland" />

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="bottom|center"
      android:layout_margin="10dp"
      app:srcCompat="@drawable/flag_of_thailand_svg" />
  <Button
      android:id="@+id/button_next"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="bottom|right"
      android:layout_margin="10dp"
      android:clickable="true"
    android:text="NEXT" />



</FrameLayout>